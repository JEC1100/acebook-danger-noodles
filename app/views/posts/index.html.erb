<% @posts.reverse_each do |post| %>

<%= post.user.username %>
  <% if post.image.attached? %>
  <img src="<%=(url_for(post.image))%>"
     width="400" 
     height="400"/>
    <%# could maybe do with a better resizing option %>
    <%# resize before it goes into storage? %>
    <%# portrait vs landscape?? %>
    
  <% end %>
  <p><%= post.message %></p>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
