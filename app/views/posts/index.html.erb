

<% @posts.reverse_each do |post| %>
  <% if post.image.attached? %>
  <img src="<%=(url_for(post.image))%>"
     width="400" 
     height="400"/>
    <%# could maybe do with a better resizing option %>
    <%# resize before it goes into storage? %>
    <%# portrait vs landscape?? %>
    
  <% end %>
  <h4><%= post.message %></h4>
  <p id="likes<%=post.id%>">Likes: <%= post.likes.count %></p>
  <%= button_to 'Like', post_likes_path(post.id), method: :post ,id: post.id %>

<% end %>
<%= link_to new_post_path do %>
  New post
<% end %>
