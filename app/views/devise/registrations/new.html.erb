<div class="container">
<br>
<h2>Sign up</h2>
<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field input-group mb-4">
  <%= f.label :username, class:"input-group-text", id:"basic-addon1"%>
    <%= f.text_field :username, class:"form-control" %>
  </div>

  <div class="field input-group mb-4">
    <%= f.label :email, class:"input-group-text", id:"basic-addon1"%>
    <%= f.text_field :email, class:"form-control" %>
  </div>

  <div class="field input-group mb-4">
    <%= f.label :password, class:"input-group-text", id:"basic-addon1"%>
    <%= f.text_field :password, class:"form-control" %>
  </div>

   <div class="field input-group mb-4">
    <%= f.label :password_confirmation, class:"input-group-text", id:"basic-addon1"%>
    <%= f.text_field :password_confirmation, class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</div>
